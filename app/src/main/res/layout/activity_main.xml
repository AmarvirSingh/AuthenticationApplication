<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_register"
        android:padding="10dp"
        android:soundEffectsEnabled="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="20px"
                android:src="@drawable/login_image" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginTop="50dp"
                android:background="@drawable/edit_text_outline"
                android:hint="Enter FullName  "
                android:padding="25px" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginTop="30px"
                android:background="@drawable/edit_text_outline"
                android:hint="Enter Age  "
                android:inputType="number"
                android:padding="25px" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginTop="30px"
                android:background="@drawable/edit_text_outline"
                android:drawableRight="@drawable/lock_password"
                android:hint="Enter Password  "
                android:inputType="textPassword"
                android:padding="25px" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginTop="30px"
                android:background="@drawable/edit_text_outline"
                android:drawableRight="@drawable/email_image"
                android:hint="Enter Email Address "
                android:padding="25px" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_outline"
                android:text="Register me " />

            <TextView
                android:id="@+id/signInTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=" Sign In"
                android:textAlignment="center"
                android:textSize="50px" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:indeterminate="false"
                android:progressDrawable="@drawable/loading"
                android:visibility="invisible"
                android:paddingBottom="10px"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>